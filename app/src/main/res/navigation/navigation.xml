<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/recipe_fragment">

    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.example.homew3.mvvm.view.RecipesFragment"
        tools:layout="@layout/fragment_recipes">

        <action
            android:id="@+id/to_more_info_fragment"
            app:destination="@id/more_info_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim" />

    </fragment>

    <fragment
        android:id="@+id/more_info_fragment"
        android:name="com.example.homew3.mvvm.view.MoreInfoFragment"
        tools:layout="@layout/fragment_more_info">

        <argument
            android:name="id"
            app:argType="integer" />

        <argument
            android:name="title"
            app:argType="string" />

        <argument
            android:name="image"
            app:argType="string" />



    </fragment>

</navigation>
