<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_search"
    app:startDestination="@id/get_started">

    <fragment
        android:id="@+id/get_started"
        android:name="com.example.homew3.cleanArch.presentation.ui.FragmentGetStarted"
        tools:layout="@layout/fragment_spoonforkoni">

        <action
            android:id="@+id/to_start_fragment"
            app:destination="@id/start_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">

        </action>

        <action
            android:id="@+id/to_login_fragment"
            app:destination="@id/login_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">

        </action>

    </fragment>

    <fragment
        android:id="@+id/start_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.StartFragment"
        tools:layout="@layout/fragment_start_app">


        <action
            android:id="@+id/to_getStarted_fragment"
            app:destination="@id/get_started"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">

        </action>

        <action
            android:id="@+id/to_recipe_fragment"
            app:destination="@id/recipe_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">

        </action>

    </fragment>

    <fragment
        android:id="@+id/login_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.profile.registryLogin.LoginFragment"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/to_start_fragment"
            app:destination="@id/start_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim">

        </action>


    </fragment>

    <fragment
        android:id="@+id/recipe_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.recipes.RecipesFragment"
        tools:layout="@layout/fragment_recipes">

        <action
            android:id="@+id/to_more_info_fragment"
            app:destination="@id/more_info_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <argument
            android:name="ingredientsStart"
            app:argType="string" />


    </fragment>

    <fragment
        android:id="@+id/more_info_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.moreIfno.MoreInfoFragment"
        tools:layout="@layout/fragment_more_info">

        <action
            android:id="@+id/to_missed_ingredients_fragment"
            app:destination="@id/missed_ingredients_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_steps_fragment"
            app:destination="@id/steps_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_info_fragment"
            app:destination="@id/recipe_info_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <action
            android:id="@+id/to_timer_fragment"
            app:destination="@id/timer_fragment"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/missed_ingredients_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.missedIngredients.MissedIngredientsFragment"
        tools:layout="@layout/fragment_missed_ingredients">

        <argument
            android:name="id"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/steps_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.stepByStep.StepByStepFragment"
        tools:layout="@layout/fragment_step_by_step">


        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>


    <fragment
        android:id="@+id/recipe_info_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.info.FragmentInfo"
        tools:layout="@layout/fragmet_recipe_info">


        <argument
            android:name="id"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/timer_fragment"
        android:name="com.example.homew3.cleanArch.presentation.ui.timer.FragmentTimer"
        tools:layout="@layout/fragment_timer"/>

</navigation>
